{
    "name": "arm-aci",
    "version": "0.1.0",
    "description": "An Azure Resource Manager (ARM) example creating an instance of Azure Container Instances (ACI) using armbase as the base invocation image",
    "keywords": [
        "azure",
        "arm"
    ],
    "maintainers": [
        {
            "name": "Deis Labs",
            "email": "mabutch@microsoft.com",
            "url": "https://deislabs.io/"
        }
    ],
    "components": {
        "cnab": {
            "name": "cnab",
            "builder": "docker",
            "configuration": {
                "registry": "cnab"
            }
        }
    },
    "parameters": {
        "azure_resource_group": {
            "defaultValue": "armbase-default",
            "type": "string"
        },
        "azure_location": {
            "defaultValue": "useast",
            "type": "string"
        }
    },
    "credentials": {
        "tenant_id": {
            "env": "AZURE_TENANT_ID"
        },
        "client_id": {
            "env": "AZURE_CLIENT_ID"
        },
        "client_secret": {
            "env": "AZURE_CLIENT_SECRET"
        },
        "subscription_id": {
            "env": "AZURE_SUBSCRIPTION_ID"
        }
    }
}
