{
    "name": "aks-terraform",
    "version": "0.1.0",
    "description": "An application bundle that creates an AKS cluster using Terraform",
    "keywords": [
        "azure",
        "aks",
        "terraform"
    ],
    "maintainers": [
        {
            "name": "Deis Labs",
            "email": "mabutch@microsoft.com",
            "url": "https://deislabs.io/"
        }
    ],
    "components": {
        "cnab": {
            "name": "cnab",
            "builder": "docker",
            "configuration": {
                "registry": "cnab"
            }
        }
    },
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "East US"
        },
        "kubernetes_version": {
            "type": "string",
            "defaultValue": "1.11.3"
        },
        "agent_count": {
            "type": "int",
            "defaultValue": 1
        },
        "dns_prefix": {
            "type": "string",
            "defaultValue": "akstest"
        },
        "cluster_name": {
            "type": "string",
            "defaultValue": "akstest"
        },
        "resource_group_name": {
            "type": "string",
            "defaultValue": "azure-akstest"
        },
        "backend": {
            "type": "boolean",
            "defaultValue": true
        },
        "backend_storage_account": {
            "type": "string",
            "defaultValue": "aksterraformduffle"
        },
        "backend_storage_container": {
            "type": "string",
            "defaultValue": "aksterraformduffle"
        },
        "backend_storage_resource_group": {
            "type": "string",
            "defaultValue": "aksterraformduffle"
        }
    },
    "credentials": {
        "tenant_id": {
            "env": "TF_VAR_tenant_id"
        },
        "client_id": {
            "env": "TF_VAR_client_id"
        },
        "client_secret": {
            "env": "TF_VAR_client_secret"
        },
        "subscription_id": {
            "env": "TF_VAR_subscription_id"
        },
        "ssh_authorized_key": {
            "env": "TF_VAR_ssh_authorized_key"
        }
    }
}
